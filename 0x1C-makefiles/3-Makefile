CC = gcc
SRC = main.c school.c
OBJ = (SRC:.c=.o)
NAME = school
RM = oclean

.PHONY: all clean oclean fclean re

all:
	$(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(OBJ) $(NAME) 

%.o: %.c
	$(CC) -c $< -o $@

re:
	make clean
	make

clean:
	rm -f *~
	rm -f *#
	rm -f *.swp

ocelan:
	rm -f $(OBJ)

fclean:
	rm -f ~
	rm -f *#
	rm -f *swp
	rm -f $(OBJ) $(NAME)
